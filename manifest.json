{
  "manifest_version": 3,
  "name": "Fusion Timesheet Analyzer",
  "version": "1.0",
  "description": "Analyze your Fusion timesheet: Compare Actual vs Planned hours instantly.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://athenium.mifusion.cloud/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://athenium.mifusion.cloud/*"
      ],
      "js": [
        "scripts/utils.js",
        "scripts/content.js"
      ]
    }
  ]
}